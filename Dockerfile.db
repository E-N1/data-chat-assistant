FROM postgres:16

# Installiere Tools zum Bauen von Extensions
RUN apt-get update \
    && apt-get install -y postgresql-server-dev-16 build-essential git \
    && rm -rf /var/lib/apt/lists/*

# pgvector installieren
RUN git clone --branch v0.8.0 https://github.com/pgvector/pgvector.git /tmp/pgvector \
    && cd /tmp/pgvector \
    && make install \
    && rm -rf /tmp/pgvector